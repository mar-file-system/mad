<?xml version = "1.0" encoding = "UTF-8" ?>

<config>
    <name>rgoff-test</name>
    <version>1.10</version>
    <mnt_top>/tmp/campaign</mnt_top>
    <mdfs_top>/tmp/marfs/metadata</mdfs_top>
    <storage_top>/tmp/marfs/storage</storage_top>

    <repo>
        <name>single</name>
        <host>/tmp/marfs/metadata/single/pod%d/block%s/cap%d/scatter%d</host>
        <host_offset>0</host_offset>
        <host_count>1</host_count>
        <update_in_place>no</update_in_place>
        <ssl>no</ssl>
        <access_method>SEMI_DIRECT</access_method>
        <chunk_size>1073741824</chunk_size>
        <max_pack_file_count>-1</max_pack_file_count>
        <min_pack_file_count>10</min_pack_file_count>
        <max_pack_file_size>104857600</max_pack_file_size>
        <min_pack_file_size>1</min_pack_file_size>
        <latency>10000</latency>
        <timing_flags> NONE </timing_flags>
        <dal>
            <type>MC</type>
            <n> 3 </n>
            <e> 1 </e>
            <pods> 1 </pods>
            <blocks> 4 </blocks>
            <caps> 4 </caps>
            <scatter_width> 1024 </scatter_width>
            <degraded_log_dir> /tmp/marfs/mc-logs/degraded </degraded_log_dir>
        </dal>

        <namespace>
            <id>0</id>
            <name>rgoff_namespace</name>
            <mnt_path>/nfs</mnt_path>
            <bperms>RM,WM,RD,WD,TD,UD</bperms>
            <iperms>RM,WM,RD,WD,TD,UD</iperms>
            <min_size>0</min_size>
            <max_size>-1</max_size>
            <quota_space>-1</quota_space>
            <quota_names>-1</quota_names>
        </namespace>
    </repo>

    <storage_node>
        <hostname>localhost</hostname>
        <pod>0</pod>
        <block>0</block>
    </storage_node>
    
    <fta_node>
        <hostname>localhost</hostname>
    </fta_node>
    
</config>
