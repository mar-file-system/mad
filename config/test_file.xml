                <!-- Restricted Directory (optional) -->
                <security_root>/tmp/marfs</security_root>
            </DAL>
        </data>

        <metadata>
            <!-- All Namespaces -->
            <namespaces>
                <ns name="unit_test_ns">
                    <quota>
                        <files>0</files>
